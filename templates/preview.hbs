            const promises = [];
            
            // Image generation
            promises.push(
                fetch('/render', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                }).then(async response => {
                    if (!response.ok) {
                        const error = await response.json();
                        throw new Error(error.error || 'HTTP error! status: ' + response.status);
                    }
                    const blob = await response.blob();
                    imageUrl = URL.createObjectURL(blob);
                    
                    // Create new image to get dimensions
                    const img = new Image();
                    img.onload = function() {
                        document.getElementById('previewSize').textContent = this.naturalWidth + '√ó' + this.naturalHeight;
                        document.getElementById('previewFormat').textContent = formData.format.toUpperCase();
                        document.getElementById('previewDpr').textContent = formData.dpr + 'x';
                    };
                    img.src = imageUrl;
                    document.getElementById('previewImage').src = imageUrl;
                }).catch(err => {
                    console.warn('Image generation failed:', err);
                    // Don't fail the whole operation if image fails
                })
            );
            
