<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <style>
      @font-face {
        font-family: 'AppPrimary';
        src: local('Inter'), local('Noto Sans'), local('DejaVu Sans'), local('Liberation Sans');
        font-weight: 400;
        font-style: normal;
      }
      :root {
        --bg: {{#if bg}}{{bg}}{{else}}#0b1021{{/if}};
        --fg: {{#if color}}{{color}}{{else}}#ffffff{{/if}};
      }
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
      }
      body {
        font-family: 'AppPrimary', 'Inter', 'Noto Sans', 'Liberation Sans', 'DejaVu Sans', 'Roboto', 'Helvetica', 'Arial', sans-serif;
        background: var(--bg);
        color: var(--fg);
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .container {
        display: flex;
        flex-direction: column;
        gap: 12px;
        text-align: center;
        padding: 32px;
        max-width: 90%;
      }
      .title {
        font-weight: 800;
        font-size: {{#if titleSize}}{{titleSize}}{{else}}48px{{/if}};
        line-height: 1.1;
      }
      .subtitle {
        opacity: 0.9;
        font-size: {{#if subtitleSize}}{{subtitleSize}}{{else}}24px{{/if}};
      }
      .badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,.3);
        font-size: 14px;
        opacity: .9;
      }
    </style>
    {{#if extraCss}}<style>{{{extraCss}}}</style>{{/if}}
  </head>
  <body>
    <div class="container">
      {{#if badge}}<div class="badge">{{badge}}</div>{{/if}}
      {{#if title}}<div class="title">{{{title}}}</div>{{/if}}
      {{#if subtitle}}<div class="subtitle">{{{subtitle}}}</div>{{/if}}
    </div>
    {{#if extraHtml}}{{{extraHtml}}}{{/if}}
    {{#if extraScript}}<script>{{{extraScript}}}</script>{{/if}}
  </body>
</html>